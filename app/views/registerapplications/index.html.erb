<h1>My Apps</h1>

<div class="row">
  <div class="col-md-8">
    <% if current_user.registerapplications.any? %>
      <% @registerapplications.each do |app| %>
        <div class="media">
          <div class="media-body">
              <h4 class="media-heading">
                <%= link_to app.name, app %>
              </h4>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No apps exist yet!</p>
    <% end %>
  </div>
  <div class="col-md-4", style="padding-top:10px;">
    <%= link_to "Register a new app", registerapplications_new_path, class: 'btn btn-success' %>
  </div>
</div>
