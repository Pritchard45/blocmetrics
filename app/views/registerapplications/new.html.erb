<h1>Application Registration</h1>

<div class="row">
  <div class="col-md-8">
      <%= form_for @registerapplication do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of application here" %>
        </div>
        <div class ="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: 'form-control', placeholder: "Paste URL here" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success'  %>
        </div>
      <% end %>
  </div>
</div>
